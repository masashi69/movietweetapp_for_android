#:set tx ''

WindowManager:
	Mainmenu:
	Postmenu:
	Getmenu:
	Postmenu_detail:


<Mainmenu>:
	name: 'home'

	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		Label:
			text: 'Movie info tweet App'
			font_size: 30
		Button:
			text: 'POST into'
	        size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'post'
		Button:
			text: 'GET info'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'get'

<Postmenu>:
	name: 'post'

	GridLayout:
		padding: 30
		spacing: 30
		cols: 1
		Label:
			text: 'Post info tweet\n\nInput a movie title'

		GridLayout:
			spacing: 30
			cols: 2
		
			Label:
				text: 'Title'
				size_hint: .5, .5
		    TextInput:
				size_hint: .5, .5
				multiline: False
			Label:
				text: 'Year (Optional)'
				size_hint: .5, .5
		    TextInput:
				size_hint: .5, .5
				multiline: False
		Button:
			text: 'submit'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'post_second'

<Postmenu_detail>:
	name: 'post_second'

	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		Label:
			text: 'Post the following contents'
			size_hint: .5, .5
		Label:
			text: 'Title'
			size_hint: .5, .5
		Button:
			text: 'submit'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        # on_press: app.root.current = 'home'
		Button:
			text: 'cancel'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'home'


<Getmenu>:
	name: 'get'

	BoxLayout:
		orientation: 'vertical'
		padding: 10
		spacing: 10

		Label:
			text: 'Get info tweet.\nInput year if you want see specify year.'
			size_hint: 1 , .1

		Label:
			text: 'Year (optional)'
	        pos_hint: {'center_x': 0.5}
			size_hint: None, .1
	    TextInput:
	    	id: getyear
	        pos_hint: {'center_x': 0.5}
			size_hint: None, .1
			multiline: False

		Button:
			text: 'submit'
			size_hint: .5, .2
	        pos_hint: {'center_x': 0.5}
	        on_press:
	        	#app.root.current = 'get_second'
	        	root.gettitle()

		ScrollView:			
			Label:
				id: movie_o
				text: ''
				size_hint_y: None
				height: self.texture_size[1] # scroll from top of text
				text_size: self.width, None

		Button:
			text: 'return'
			size_hint: .5, .2
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'home'


