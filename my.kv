#:set tx ''

WindowManager:
	Mainmenu:
	Postmenu:
	Getmenu:
	Postmenu_detail:
	Getmenu_detail:


<Mainmenu>:
	name: 'home'

	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		Label:
			text: 'Movie info tweet App'
			font_size: 30
		Button:
			text: 'POST into'
	        size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'post'
		Button:
			text: 'GET info'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'get'

<Postmenu>:
	name: 'post'

	GridLayout:
		padding: 30
		spacing: 30
		cols: 1
		Label:
			text: 'Post info tweet\n\nInput a movie title'

		GridLayout:
			spacing: 30
			cols: 2
		
			Label:
				text: 'Title'
				size_hint: .5, .5
		    TextInput:
				size_hint: .5, .5
				multiline: False
			Label:
				text: 'Year (Optional)'
				size_hint: .5, .5
		    TextInput:
				size_hint: .5, .5
				multiline: False
		Button:
			text: 'submit'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'post_second'

<Postmenu_detail>:
	name: 'post_second'

	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		Label:
			text: 'Post the following contents'
			size_hint: .5, .5
		Label:
			text: 'Title'
			size_hint: .5, .5
		Button:
			text: 'submit'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        # on_press: app.root.current = 'home'
		Button:
			text: 'cancel'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'home'


<Getmenu>:
	name: 'get'

	GridLayout:
		padding: 10
		spacing: 10
		cols: 1

		GridLayout:
			rows: 1
			Label:
				text: 'Get info tweet.\nInput year if you want see specify year.'

		GridLayout:
			cols: 2
			Label:
				text: 'Year (optional)'
				size_hint: .5, .5
		    TextInput:
				size_hint: .5, .5
				multiline: False
		GridLayout:
			rows: 1
			Button:
				text: 'submit'
				size_hint: .1, .1
				height: .1 
		        pos_hint: {'center_x': 0.5}
		        on_press:
		        	#app.root.current = 'get_second'
		        	root.gettitle()
		ScrollView:
			
			Label:
				id: 'movie_o'
				text: ''
				size_hint_y: None
				height: self.texture_size[1] # scroll from top of text
				text_size: self.width, None

<Getmenu_detail>:
	name: 'get_second'

	BoxLayout:
		padding: 30
		spacing: 30
		orientation: 'vertical'

		Label:
			text: 'Get info Detail'	

		ScrollView:
			
			Label:
				id: c
				text: 
				size_hint_y: None
				height: self.texture_size[1] # scroll from top of text
				text_size: self.width, None

		Button:
			text: 'return'
			size_hint: .5, .5
	        pos_hint: {'center_x': 0.5}
	        on_press: app.root.current = 'home'


